function refreshForm(innerHTML) {
  const innerForm = document.getElementById("inner-form");
  innerForm.innerHTML = innerHTML;
}

<% if @booking.errors.any? %>
  // select the form
  refreshForm()
  // re-render the new form
  refreshForm('<%= j render "bookings/new" %>');
  // delete from the dom
  innerForm.innerHTML = "";
  // append the new form to the dom

<% else %>
  bindSweetAlertButtonDemo('<%= @booking.skill.name %>', <%= current_user.id %>);
<% end %>

