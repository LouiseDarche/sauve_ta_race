<div class="container">
  <h1>Learn to survive</h1>
  <div class="row">
    <% @skills.each do |skill| %>
      <div class="col-xs-12 col-md-4 col-lg-4">
        <%= link_to skill_path(skill) do %>
          <div class="card">
            <div class="image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= skill.image_url %>);">
              <div class="card-category"></div>
            </div>
            <div class="card-body">
              <div class="card-description align-left">
                <h2><strong> <%= skill.name %></strong> </h2>
                <p><i class="fa fa-map-marker-alt"></i> <%= skill.location %></p>
                <p id="price"> Price: <%= skill.price %>â‚¬</p>
              </div>
              <img class="card-user" src="https://i.pinimg.com/736x/89/49/8e/89498e10092d7b57c0ebc11a5b535cb2--twitter-cats.jpg">
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
