<div class="container">
  <h1>Learn to survive</h1>
  <div class="row">
    <% @skills.each do |skill| %>
      <div class="col-xs-12 col-md-4 col-lg-4">
        <%= link_to skill_path(skill) do %>
          <div class="card">
            <div class="image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://i.pinimg.com/originals/4d/ed/ae/4dedaefb30f9f66de256228ff8911ad0.jpg');">
              <div class="card-category"></div>
            </div>
            <div class="card-body">
              <div class="card-description">
                <h2><%= skill.name %></h2>
                <p><%= skill.location %></p>
                <p> Price per day: <%= skill.price %>â‚¬</p>
              </div>
              <img class="card-user" src="https://gastoniagrizzlies.com/wp-content/uploads/2017/02/Bear-With-Funny-Face-Expression.jpg">
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
